{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*test.ts",
    "tests/utils/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
